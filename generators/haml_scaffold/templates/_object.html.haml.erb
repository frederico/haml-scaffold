- content_tag_for :div, <%= singular_name %> do
  %ul
<% for attribute in attributes -%>
    %li
      %strong <%= attribute.column.human_name %>:
      =h <%= singular_name %>.<%= attribute.name %>
<% end -%>
    = link_to 'ver', <%= singular_name %>
    = link_to 'editar', edit_<%= singular_name %>_path(<%= singular_name %>)
    = link_to 'remover', <%= singular_name %>, :confirm => 'Voc tm certeza?', :method => :delete